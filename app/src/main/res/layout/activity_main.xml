<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#424242"
    android:id="@+id/ll1"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:background="#414141"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/iv1"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/ic_home_black_24dp"/>
        <EditText
            android:layout_width="0dp"
            android:id="@+id/et1"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:hint="@string/app_name"
            android:inputType="textWebEditText"
            android:background="@drawable/top_design"/>
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/iv2"
            android:onClick="ClickEvent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/ic_search_black_24dp"/>
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:background="#9e9e9e"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:id="@+id/wview"
        android:padding="8dp"/>

    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="0dp"
            android:src="@drawable/ic_facebook_logo_button"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:id="@+id/iv3"
            android:onClick="ClickEvent"/>
        <ImageView
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:src="@drawable/ic_google_plus_logo_button"
            android:id="@+id/iv4"
            android:onClick="ClickEvent"/>
        <ImageView
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:src="@drawable/ic_tumblr_logo_button"
            android:id="@+id/iv5"
            android:onClick="ClickEvent"/>
        <ImageView
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:src="@drawable/ic_twitter_logo_button"
            android:id="@+id/iv6"
            android:onClick="ClickEvent"/>
    </LinearLayout>
</LinearLayout>